<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ok"
    tools:context=".MainActivity">


    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button1"
        android:layout_width="227dp"
        android:layout_height="205dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:sparkbutton_activeImage="@drawable/plpl"
        app:sparkbutton_iconSize="160dp"
        app:sparkbutton_inActiveImage="@drawable/pl"
        app:sparkbutton_primaryColor="@color/blue"
        app:sparkbutton_secondaryColor="@color/red">

    </com.varunest.sparkbutton.SparkButton>

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button12"
        android:layout_width="251dp"
        android:layout_height="173dp"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881"
        app:sparkbutton_activeImage="@drawable/sasa"
        app:sparkbutton_iconSize="210dp"
        app:sparkbutton_inActiveImage="@drawable/wdwasa"
        app:sparkbutton_primaryColor="@color/pink"
        app:sparkbutton_secondaryColor="@color/yellow">

    </com.varunest.sparkbutton.SparkButton>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="105dp"
        android:layout_height="106dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:fontFamily="@font/yeseva_one"
        android:text="Male"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="99dp"
        android:fontFamily="@font/yeseva_one"
        android:text="Female"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.431" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="474dp"
        android:layout_height="77dp"
        android:fontFamily="@font/yeseva_one"
        android:text="Please select your gender"
        android:textColor="#000000"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.365" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yeseva_one"
        android:text="Profile setup"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/spark_button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yeseva_one"
        android:text="Step 1/4..."
        android:textColor="#FFFAFA"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>