<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1231"
    tools:context=".MainActivity">


    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button1"
        android:layout_width="356dp"
        android:layout_height="762dp"
        android:layout_marginTop="448dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sparkbutton_activeImage="@drawable/spark12"
        app:sparkbutton_iconSize="900dp"
        app:sparkbutton_inActiveImage="@drawable/spark12"
        app:sparkbutton_primaryColor="@color/blue"
        app:sparkbutton_secondaryColor="@color/red"
        >

    </com.varunest.sparkbutton.SparkButton>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/yeseva_one"
        android:text="Profile setup"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button12"
        android:layout_width="407dp"
        android:layout_height="169dp"
        android:layout_marginTop="276dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sparkbutton_activeImage="@drawable/job12"
        app:sparkbutton_iconSize="400dp"
        app:sparkbutton_inActiveImage="@drawable/job12"
        app:sparkbutton_primaryColor="@color/pink"
        app:sparkbutton_secondaryColor="@color/yellow">

    </com.varunest.sparkbutton.SparkButton>


</androidx.constraintlayout.widget.ConstraintLayout>